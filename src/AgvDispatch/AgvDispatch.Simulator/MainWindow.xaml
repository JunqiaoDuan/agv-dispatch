<Window x:Class="AgvDispatch.Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgvDispatch.Simulator"
        mc:Ignorable="d"
        Title="AGV 模拟器 - 多小车管理" Height="800" Width="900"
        WindowStartupLocation="CenterScreen">
    <TabControl x:Name="TabControlAgvs" Margin="5">
        <TabItem Header="小车 1 (V001)">
            <local:AgvControlPanel x:Name="AgvPanel1"/>
        </TabItem>
        <TabItem Header="小车 2 (V002)">
            <local:AgvControlPanel x:Name="AgvPanel2"/>
        </TabItem>
        <TabItem Header="小车 3 (V003)">
            <local:AgvControlPanel x:Name="AgvPanel3"/>
        </TabItem>
        <TabItem Header="小车 4 (V099)">
            <local:AgvControlPanel x:Name="AgvPanel4"/>
        </TabItem>
    </TabControl>
</Window>

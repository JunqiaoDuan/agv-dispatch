<Window x:Class="AgvDispatch.Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgvDispatch.Simulator"
        mc:Ignorable="d"
        Title="AGV 模拟器" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 连接配置 -->
        <GroupBox Header="连接配置" Grid.Row="0" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="服务器:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="TxtBrokerHost" Text="localhost" Margin="0,0,10,5"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="端口:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Row="0" Grid.Column="3" x:Name="TxtBrokerPort" Text="1883" Margin="0,0,10,5"/>

                <Button Grid.Row="0" Grid.Column="4" x:Name="BtnConnect" Content="连接" Click="BtnConnect_Click" Width="80" Padding="5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="小车ID:" VerticalAlignment="Center" Margin="0,5,10,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="TxtAgvId" Text="V001" Margin="0,5,10,0"/>

                <TextBlock Grid.Row="1" Grid.Column="2" Text="密码:" VerticalAlignment="Center" Margin="0,5,10,0"/>
                <PasswordBox Grid.Row="1" Grid.Column="3" x:Name="TxtPassword" Margin="0,5,10,0"/>
            </Grid>
        </GroupBox>

        <!-- 状态信息 -->
        <GroupBox Header="状态信息" Grid.Row="1" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="状态:" FontWeight="Bold"/>
                    <TextBlock x:Name="TxtStatus" Text="离线" FontSize="14" Foreground="Gray"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="电量:" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="TxtBattery" Text="100" FontSize="14"/>
                        <TextBlock Text="%" FontSize="14" Margin="2,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="0,0,10,0">
                    <TextBlock Text="位置:" FontWeight="Bold"/>
                    <TextBlock x:Name="TxtPosition" Text="(0, 0)" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Margin="0,0,10,0">
                    <TextBlock Text="站点:" FontWeight="Bold"/>
                    <TextBlock x:Name="TxtStation" Text="无" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="4">
                    <TextBlock Text="当前任务:" FontWeight="Bold"/>
                    <TextBlock x:Name="TxtCurrentTask" Text="无" FontSize="14"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 位置控制 -->
        <GroupBox Header="位置控制" Grid.Row="2" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="X:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="TxtPositionX" Text="0" Margin="0,0,10,5"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Y:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Row="0" Grid.Column="3" x:Name="TxtPositionY" Text="0" Margin="0,0,10,5"/>

                <TextBlock Grid.Row="0" Grid.Column="4" Text="电量:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Row="0" Grid.Column="5" x:Name="TxtBatteryInput" Text="100" Margin="0,0,10,5"/>

                <Button Grid.Row="0" Grid.Column="6" x:Name="BtnSetPosition" Content="更新" Click="BtnSetPosition_Click" Width="80" Padding="5" VerticalAlignment="Center"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="站点:" VerticalAlignment="Center" Margin="0,5,10,0"/>
                <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5" x:Name="CmbStation" IsEditable="True" Margin="0,5,10,0" SelectedIndex="0">
                    <ComboBoxItem Content="无" Tag=""/>
                    <ComboBoxItem Content="S101 - 大棚B1" Tag="S101"/>
                    <ComboBoxItem Content="S102 - 大棚B2" Tag="S102"/>
                    <ComboBoxItem Content="S103 - 大棚B3" Tag="S103"/>
                    <ComboBoxItem Content="S105 - 大棚B5" Tag="S105"/>
                    <ComboBoxItem Content="S106 - 大棚B6" Tag="S106"/>
                    <ComboBoxItem Content="S107 - 大棚B7" Tag="S107"/>
                    <ComboBoxItem Content="S109 - 大棚B9" Tag="S109"/>
                    <ComboBoxItem Content="S110 - 大棚B10" Tag="S110"/>
                    <ComboBoxItem Content="S111 - 大棚B11" Tag="S111"/>
                    <ComboBoxItem Content="S113 - 大棚B13" Tag="S113"/>
                    <ComboBoxItem Content="S114 - 大棚B14" Tag="S114"/>
                    <ComboBoxItem Content="S115 - 大棚B15" Tag="S115"/>
                    <ComboBoxItem Content="S117 - 大棚B17" Tag="S117"/>
                    <ComboBoxItem Content="S118 - 大棚B18" Tag="S118"/>
                    <ComboBoxItem Content="S119 - 大棚B19" Tag="S119"/>
                    <ComboBoxItem Content="S121 - 大棚B21" Tag="S121"/>
                    <ComboBoxItem Content="S122 - 大棚B22" Tag="S122"/>
                    <ComboBoxItem Content="S123 - 大棚B23" Tag="S123"/>
                    <ComboBoxItem Content="S201 - 卸料1" Tag="S201"/>
                    <ComboBoxItem Content="S301 - 充电1" Tag="S301"/>
                    <ComboBoxItem Content="S302 - 充电2" Tag="S302"/>
                    <ComboBoxItem Content="S303 - 充电3" Tag="S303"/>
                    <ComboBoxItem Content="S401 - 待命1" Tag="S401"/>
                    <ComboBoxItem Content="S402 - 待命2" Tag="S402"/>
                    <ComboBoxItem Content="S403 - 待命3" Tag="S403"/>
                </ComboBox>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="任务:" VerticalAlignment="Center" Margin="0,5,10,0"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="TxtTaskId" Margin="0,5,10,0"/>
                <TextBlock Grid.Row="2" Grid.Column="2" Text="进度:" VerticalAlignment="Center" Margin="0,5,10,0"/>
                <Slider Grid.Row="2" Grid.Column="3" x:Name="SliderProgress" Minimum="0" Maximum="100" Value="0"
                        VerticalAlignment="Center" Margin="0,5,5,0" ValueChanged="SliderProgress_ValueChanged"/>
                <TextBlock Grid.Row="2" Grid.Column="4" x:Name="TxtProgressValue" Text="0%" Width="40"
                           VerticalAlignment="Center" Margin="0,5,10,0"/>
                <Button Grid.Row="2" Grid.Column="5" x:Name="BtnReportProgress" Content="上报进度"
                        Click="BtnReportProgress_Click" Width="80" Margin="0,5,0,0" Padding="5"/>
            </Grid>
        </GroupBox>

        <!-- 异常模拟 -->
        <GroupBox Header="异常模拟" Grid.Row="3" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="异常类型:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="1" x:Name="CmbExceptionType" Margin="0,0,10,0" SelectedIndex="0">
                    <ComboBoxItem Content="障碍物" Tag="1"/>
                    <ComboBoxItem Content="低电量" Tag="2"/>
                    <ComboBoxItem Content="电机故障" Tag="3"/>
                    <ComboBoxItem Content="传感器故障" Tag="4"/>
                    <ComboBoxItem Content="网络异常" Tag="5"/>
                    <ComboBoxItem Content="急停" Tag="6"/>
                </ComboBox>

                <TextBlock Grid.Column="2" Text="严重级别:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="3" x:Name="CmbExceptionSeverity" Margin="0,0,10,0" SelectedIndex="1">
                    <ComboBoxItem Content="信息" Tag="1"/>
                    <ComboBoxItem Content="警告" Tag="2"/>
                    <ComboBoxItem Content="错误" Tag="3"/>
                    <ComboBoxItem Content="严重" Tag="4"/>
                </ComboBox>

                <Button Grid.Column="4" x:Name="BtnReportException" Content="上报异常" Click="BtnReportException_Click" Width="100" Padding="5"/>
            </Grid>
        </GroupBox>

        <!-- 日志输出 -->
        <GroupBox Header="日志输出" Grid.Row="4" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="TxtLog" IsReadOnly="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto" Background="#F0F0F0"
                             FontFamily="Consolas" FontSize="12"/>
                </ScrollViewer>

                <Button Grid.Row="1" x:Name="BtnClearLog" Content="清空日志" Click="BtnClearLog_Click"
                        Width="100" HorizontalAlignment="Right" Margin="0,5,0,0" Padding="5"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>

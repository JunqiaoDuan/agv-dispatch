@page "/agvs"
@using AgvDispatch.Shared.DTOs.Agvs
@using AgvDispatch.Web.Services
@rendermode InteractiveServer
@inject IAgvClient AgvClient
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<PageTitle>小车管理 - AGV 调度系统</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">小车管理</MudText>

<MudPaper Class="pa-4">
    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-4">
        <MudTextField @bind-Value="_searchText"
                      Placeholder="搜索小车编号、名称..."
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      Immediate="true"
                      DebounceInterval="300"
                      OnDebounceIntervalElapsed="@OnSearch"
                      Style="max-width: 300px;" />
        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.Add"
                   OnClick="@OpenCreateDialog">
            新增小车
        </MudButton>
    </MudStack>

    <MudDataGrid T="AgvListItemDto"
                 Items="@_agvList"
                 Loading="@_loading"
                 Hover="true"
                 Striped="true"
                 Dense="true"
                 RowsPerPage="10">
        <Columns>
            <PropertyColumn Property="x => x.AgvCode" Title="编号" />
            <PropertyColumn Property="x => x.DisplayName" Title="名称" />
            <TemplateColumn Title="状态" Sortable="true" SortBy="x => x.AgvStatus">
                <CellTemplate>
                    <MudChip T="string"
                             Color="@GetStatusColor(context.Item.AgvStatus)"
                             Size="Size.Small">
                        @context.Item.AgvStatus.ToDisplayText()
                    </MudChip>
                </CellTemplate>
            </TemplateColumn>
            <TemplateColumn Title="电量" Sortable="true" SortBy="x => x.Battery">
                <CellTemplate>
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                        <MudProgressLinear Color="@GetBatteryColor(context.Item.Battery)"
                                           Value="@context.Item.Battery"
                                           Style="width: 60px;" />
                        <MudText Typo="Typo.body2">@context.Item.Battery%</MudText>
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>
            <TemplateColumn Title="位置">
                <CellTemplate>
                    <MudText Typo="Typo.body2">
                        (@context.Item.PositionX.ToString("F1"), @context.Item.PositionY.ToString("F1"))
                    </MudText>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.Speed" Title="速度(m/s)" Format="F2" />
            <TemplateColumn Title="最后在线">
                <CellTemplate>
                    @if (context.Item.LastOnlineTime.HasValue)
                    {
                        <MudText Typo="Typo.body2">
                            @context.Item.LastOnlineTime.Value.ToLocalTime().ToString("MM-dd HH:mm:ss")
                        </MudText>
                    }
                    else
                    {
                        <MudText Typo="Typo.body2" Color="Color.Default">-</MudText>
                    }
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.SortNo" Title="排序" />
            <TemplateColumn Title="操作" Sortable="false">
                <CellTemplate>
                    <MudStack Row="true" Spacing="1">
                        <MudTooltip Text="编辑">
                            <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                           Size="Size.Small"
                                           Color="Color.Primary"
                                           OnClick="@(() => OpenEditDialog(context.Item))" />
                        </MudTooltip>
                        <MudTooltip Text="删除">
                            <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                           Size="Size.Small"
                                           Color="Color.Error"
                                           OnClick="@(() => OpenDeleteDialog(context.Item))" />
                        </MudTooltip>
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <NoRecordsContent>
            <MudText>没有找到小车数据</MudText>
        </NoRecordsContent>
        <LoadingContent>
            <MudText>加载中...</MudText>
        </LoadingContent>
        <PagerContent>
            <MudDataGridPager T="AgvListItemDto" />
        </PagerContent>
    </MudDataGrid>
</MudPaper>

@code {
    private List<AgvListItemDto> _agvList = new();
    private List<AgvListItemDto> _filteredList = new();
    private bool _loading = true;
    private string _searchText = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadAgvs();
    }

    private async Task LoadAgvs()
    {
        _loading = true;
        try
        {
            _agvList = await AgvClient.GetAllAsync();
            _filteredList = _agvList;
        }
        catch (Exception ex)
        {
            Snackbar.Add($"加载数据失败: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private void OnSearch()
    {
        if (string.IsNullOrWhiteSpace(_searchText))
        {
            _filteredList = _agvList;
        }
        else
        {
            var searchLower = _searchText.ToLower();
            _filteredList = _agvList.Where(x =>
                x.AgvCode.ToLower().Contains(searchLower) ||
                x.DisplayName.ToLower().Contains(searchLower) ||
                (x.Description?.ToLower().Contains(searchLower) ?? false))
                .ToList();
        }
    }

    private async Task OpenCreateDialog()
    {
        var parameters = new DialogParameters<AgvEditDialog>
        {
            { x => x.IsEdit, false }
        };

        var options = new DialogOptions
        {
            MaxWidth = MaxWidth.Small,
            FullWidth = true,
            CloseOnEscapeKey = true
        };

        var dialog = await DialogService.ShowAsync<AgvEditDialog>("新增小车", parameters, options);
        var result = await dialog.Result;

        if (result is { Canceled: false })
        {
            await LoadAgvs();
            Snackbar.Add("小车创建成功", Severity.Success);
        }
    }

    private async Task OpenEditDialog(AgvListItemDto agv)
    {
        var parameters = new DialogParameters<AgvEditDialog>
        {
            { x => x.IsEdit, true },
            { x => x.AgvId, agv.Id }
        };

        var options = new DialogOptions
        {
            MaxWidth = MaxWidth.Small,
            FullWidth = true,
            CloseOnEscapeKey = true
        };

        var dialog = await DialogService.ShowAsync<AgvEditDialog>("编辑小车", parameters, options);
        var result = await dialog.Result;

        if (result is { Canceled: false })
        {
            await LoadAgvs();
            Snackbar.Add("小车更新成功", Severity.Success);
        }
    }

    private async Task OpenDeleteDialog(AgvListItemDto agv)
    {
        var parameters = new DialogParameters<ConfirmDialog>
        {
            { x => x.ContentText, $"确定要删除小车 [{agv.AgvCode}] {agv.DisplayName} 吗？此操作不可恢复。" },
            { x => x.ButtonText, "删除" },
            { x => x.Color, Color.Error }
        };

        var options = new DialogOptions
        {
            CloseOnEscapeKey = true
        };

        var dialog = await DialogService.ShowAsync<ConfirmDialog>("确认删除", parameters, options);
        var result = await dialog.Result;

        if (result is { Canceled: false })
        {
            try
            {
                if (await AgvClient.DeleteAsync(agv.Id))
                {
                    await LoadAgvs();
                    Snackbar.Add("小车删除成功", Severity.Success);
                }
                else
                {
                    Snackbar.Add("删除失败", Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"删除失败: {ex.Message}", Severity.Error);
            }
        }
    }

    private Color GetStatusColor(AgvStatus status) => status switch
    {
        AgvStatus.Offline => Color.Default,
        AgvStatus.Idle => Color.Success,
        AgvStatus.Running => Color.Primary,
        AgvStatus.Charging => Color.Warning,
        AgvStatus.Error => Color.Error,
        _ => Color.Default
    };

    private Color GetBatteryColor(int battery) => battery switch
    {
        <= 20 => Color.Error,
        <= 50 => Color.Warning,
        _ => Color.Success
    };
}

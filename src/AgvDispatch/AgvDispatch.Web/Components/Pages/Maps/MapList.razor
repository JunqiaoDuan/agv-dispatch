@page "/maps"
@using AgvDispatch.Shared.DTOs.Maps
@using AgvDispatch.Web.Services
@rendermode InteractiveServer
@inject IMapClient MapClient
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject IJSRuntime JS

<PageTitle>地图管理 - AGV 调度系统</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">地图管理</MudText>

<MudPaper Class="pa-4">
    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-4">
        <MudTextField @bind-Value="_searchText"
                      Placeholder="搜索地图编号、名称..."
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      Immediate="true"
                      DebounceInterval="300"
                      OnDebounceIntervalElapsed="@OnSearch"
                      Style="max-width: 300px;" />
        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.Add"
                   OnClick="@OpenCreateDialog">
            新增地图
        </MudButton>
    </MudStack>

    <MudDataGrid T="MapListItemDto"
                 Items="@_filteredList"
                 Loading="@_loading"
                 Hover="true"
                 Striped="true"
                 Dense="true"
                 RowsPerPage="10">
        <Columns>
            <PropertyColumn Property="x => x.MapCode" Title="编号" />
            <PropertyColumn Property="x => x.DisplayName" Title="名称" />
            <TemplateColumn Title="尺寸(cm)">
                <CellTemplate>
                    <MudText Typo="Typo.body2">
                        @context.Item.Width.ToString("F0") x @context.Item.Height.ToString("F0")
                    </MudText>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.NodeCount" Title="节点数" />
            <PropertyColumn Property="x => x.EdgeCount" Title="边数" />
            <PropertyColumn Property="x => x.RouteCount" Title="路径数" />
            <PropertyColumn Property="x => x.StationCount" Title="站点数" />
            <TemplateColumn Title="状态">
                <CellTemplate>
                    <MudChip T="string"
                             Color="@(context.Item.IsActive ? Color.Success : Color.Default)"
                             Size="Size.Small">
                        @(context.Item.IsActive ? "启用" : "禁用")
                    </MudChip>
                </CellTemplate>
            </TemplateColumn>
            <PropertyColumn Property="x => x.SortNo" Title="排序" />
            <TemplateColumn Title="操作" Sortable="false">
                <CellTemplate>
                    <MudStack Row="true" Spacing="1">
                        <MudTooltip Text="编辑地图">
                            <MudIconButton Icon="@Icons.Material.Filled.Map"
                                           Size="Size.Small"
                                           Color="Color.Primary"
                                           OnClick="@(() => OpenMapStudio(context.Item))" />
                        </MudTooltip>
                        <MudTooltip Text="编辑信息">
                            <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                           Size="Size.Small"
                                           Color="Color.Default"
                                           OnClick="@(() => OpenEditDialog(context.Item))" />
                        </MudTooltip>
                        <MudTooltip Text="删除">
                            <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                           Size="Size.Small"
                                           Color="Color.Error"
                                           OnClick="@(() => OpenDeleteDialog(context.Item))" />
                        </MudTooltip>
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <NoRecordsContent>
            <MudText>没有找到地图数据</MudText>
        </NoRecordsContent>
        <LoadingContent>
            <MudText>加载中...</MudText>
        </LoadingContent>
        <PagerContent>
            <MudDataGridPager T="MapListItemDto" />
        </PagerContent>
    </MudDataGrid>
</MudPaper>

@code {
    private List<MapListItemDto> _mapList = [];
    private List<MapListItemDto> _filteredList = [];
    private bool _loading = true;
    private string _searchText = string.Empty;
    private bool _initialized;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_initialized)
        {
            _initialized = true;
            await LoadMaps();
            StateHasChanged();
        }
    }

    private async Task LoadMaps()
    {
        _loading = true;
        try
        {
            _mapList = await MapClient.GetAllAsync();
            _filteredList = _mapList;
        }
        catch (Exception ex)
        {
            Snackbar.Add($"加载数据失败: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private void OnSearch()
    {
        if (string.IsNullOrWhiteSpace(_searchText))
        {
            _filteredList = _mapList;
        }
        else
        {
            var searchLower = _searchText.ToLower();
            _filteredList = _mapList.Where(x =>
                x.MapCode.ToLower().Contains(searchLower) ||
                x.DisplayName.ToLower().Contains(searchLower) ||
                (x.Description?.ToLower().Contains(searchLower) ?? false))
                .ToList();
        }
    }

    private async Task OpenMapStudio(MapListItemDto map)
    {
        await JS.InvokeVoidAsync("open", $"/map-studio/{map.Id}", "_blank");
    }

    private async Task OpenCreateDialog()
    {
        var parameters = new DialogParameters<MapEditDialog>
        {
            { x => x.IsEdit, false }
        };

        var options = new DialogOptions
        {
            MaxWidth = MaxWidth.Small,
            FullWidth = true,
            CloseOnEscapeKey = true
        };

        var dialog = await DialogService.ShowAsync<MapEditDialog>("新增地图", parameters, options);
        var result = await dialog.Result;

        if (result is { Canceled: false })
        {
            await LoadMaps();
            Snackbar.Add("地图创建成功", Severity.Success);
        }
    }

    private async Task OpenEditDialog(MapListItemDto map)
    {
        var parameters = new DialogParameters<MapEditDialog>
        {
            { x => x.IsEdit, true },
            { x => x.MapId, map.Id }
        };

        var options = new DialogOptions
        {
            MaxWidth = MaxWidth.Small,
            FullWidth = true,
            CloseOnEscapeKey = true
        };

        var dialog = await DialogService.ShowAsync<MapEditDialog>("编辑地图", parameters, options);
        var result = await dialog.Result;

        if (result is { Canceled: false })
        {
            await LoadMaps();
            Snackbar.Add("地图更新成功", Severity.Success);
        }
    }

    private async Task OpenDeleteDialog(MapListItemDto map)
    {
        var parameters = new DialogParameters<ConfirmDialog>
        {
            { x => x.ContentText, $"确定要删除地图 [{map.MapCode}] {map.DisplayName} 吗？此操作不可恢复。" },
            { x => x.ButtonText, "删除" },
            { x => x.Color, Color.Error }
        };

        var options = new DialogOptions
        {
            CloseOnEscapeKey = true
        };

        var dialog = await DialogService.ShowAsync<ConfirmDialog>("确认删除", parameters, options);
        var result = await dialog.Result;

        if (result is { Canceled: false })
        {
            try
            {
                if (await MapClient.DeleteAsync(map.Id))
                {
                    await LoadMaps();
                    Snackbar.Add("地图删除成功", Severity.Success);
                }
                else
                {
                    Snackbar.Add("删除失败", Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"删除失败: {ex.Message}", Severity.Error);
            }
        }
    }
}

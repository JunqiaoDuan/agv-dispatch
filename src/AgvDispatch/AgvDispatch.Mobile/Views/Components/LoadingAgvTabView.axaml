<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AgvDispatch.Mobile.ViewModels"
             xmlns:dto="using:AgvDispatch.Shared.DTOs.Agvs"
             xmlns:components="using:AgvDispatch.Mobile.Views.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="360" d:DesignHeight="600"
             x:Class="AgvDispatch.Mobile.Views.Components.LoadingAgvTabView"
             x:DataType="vm:TaskMonitorViewModel">

    <ScrollViewer Padding="16">
        <ItemsControl ItemsSource="{Binding LoadingAgvList}">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="dto:AgvMonitorItemDto">
                    <components:AgvCardView DataContext="{Binding}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
